{
  "annotations": {},
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "panels": [
    {
      "type": "timeseries",
      "title": "HTTP Requests",
      "datasource": {
        "type": "Prometheus",
        "uid": "Prometheus"
      },
      "gridPos": {
        "h": 9,
        "w": 24,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{app=~\"$app\", environment=~\"$environment\"}[$__range])) by (endpoint, method)",
          "refId": "A"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom",
          "showLegend": true
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Percentiles per endpoints",
      "datasource": {
        "type": "Prometheus",
        "uid": "Prometheus"
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 22
      },
      "targets": [
        {
          "expr": "\nhistogram_quantile(0.5, sum(rate(http_request_duration_seconds_bucket{app=~\"$app\", environment=~\"$environment\"}[5m])) by (le, endpoint, method))\n",
          "refId": "A",
          "legendFormat": "{{endpoint}} - {{method}} - p50"
        },
        {
          "expr": "\nhistogram_quantile(0.9, sum(rate(http_request_duration_seconds_bucket{app=~\"$app\", environment=~\"$environment\"}[5m])) by (le, endpoint, method))\n",
          "refId": "B",
          "legendFormat": "{{endpoint}} - {{method}} - p90"
        },
        {
          "expr": "\nhistogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket{app=~\"$app\", environment=~\"$environment\"}[5m])) by (le, endpoint, method))\n",
          "refId": "C",
          "legendFormat": "{{endpoint}} - {{method}} - p99"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "showLegend": true
        },
        "tooltip": {
          "mode": "single"
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Requests per error code",
      "datasource": {
        "type": "Prometheus",
        "uid": "Prometheus"
      },
      "gridPos": {
        "h": 6,
        "w": 24,
        "x": 0,
        "y": 12
      },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{app=~\"$app\", environment=~\"$environment\", http_status=~\"4..|5..\"}[5m])) by (http_status)",
          "refId": "A"
        }
      ],
      "options": {
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        },
        "legend": {
          "displayMode": "list",
          "placement": "bottom",
          "showLegend": true
        },
        "stacking": {
          "mode": "normal"
        },
        "tooltip": {
          "mode": "all"
        }
      }
    },
    {
      "type": "barchart",
      "title": "Top 10 Endpoints with errors",
      "datasource": {
        "type": "Prometheus",
        "uid": "Prometheus"
      },
      "gridPos": {
        "h": 6,
        "w": 24,
        "x": 0,
        "y": 18
      },
      "targets": [
        {
          "expr": "topk(10, sum(rate(http_requests_total{app=~\"$app\", environment=~\"$environment\", http_status=~\"4..|5..\"}[5m])) by (endpoint, http_status))",
          "refId": "A",
          "legendFormat": "{{endpoint}} - {{http_status}}"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom",
          "showLegend": true
        },
        "orientation": "vertical",
        "showValue": true,
        "stacking": "none",
        "tooltip": {
          "mode": "single"
        },
        "xaxis": {
          "show": true
        },
        "yaxis": {
          "format": "short",
          "min": 0
        }
      }
    }
  ],
  "schemaVersion": 41,
  "templating": {
    "list": [
      {
        "allValue": ".*",
        "datasource": {
          "type": "Prometheus",
          "uid": "Prometheus"
        },
        "includeAll": true,
        "label": "App",
        "multi": true,
        "name": "app",
        "query": "label_values(up, app)",
        "refresh": 2,
        "sort": 1,
        "type": "query"
      },
      {
        "allValue": ".*",
        "datasource": {
          "type": "Prometheus",
          "uid": "Prometheus"
        },
        "includeAll": true,
        "label": "Environment",
        "multi": true,
        "name": "environment",
        "query": "label_values(up, environment)",
        "refresh": 2,
        "sort": 1,
        "type": "query"
      }
    ]
  },
  "timezone": "browser",
  "title": "FastAPI Dashboards"
}